package com.garrett.ogl.util;

public class Vector3f {

	public float x, y, z;
	
	public Vector3f(Vector2f vec, float z) {	
		this.x = vec.getX();
		this.y = vec.getY();
		this.z = z;
	}
	
	public Vector3f(float x, float y, float z) {	
		this.x = x;
		this.y = y;
		this.z = z;
	}

	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public float getY() {
		return y;
	}

	public void setY(float y) {
		this.y = y;
	}

	public float getZ() {
		return z;
	}

	public void setZ(float z) {
		this.z = z;
	}
	
}
